
{% extends 'base.html.twig' %}

{% block title %}New Comment{% endblock %}

{% block body %}

        <div style="background-image: url('https://i.pinimg.com/550x/70/e4/9a/70e49afe27f492f5ca62ca92768f08c7.jpg'); background-size: cover; background-position: center; " class="w-full max-w-2xl bg-primary rounded-lg shadow-md p-6">

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

            <div class="p-4 border rounded-md bg-primary shadow-md">
                {{ form_label(form.content) }}
                {{ form_widget(form.content, {'attr': {'class': 'w-full border rounded-md p-2'}}) }}
            </div>

            <div class="p-4 border border-gray rounded-md bg-primary shadow-md">
                {{ form_label(form.tag) }}
                {{ form_widget(form.tag, {'attr': {'class': 'w-full border rounded-md p-2'}}) }}
            </div>

            <div class="p-4 border border-gray-300 rounded-md bg-primary shadow-md">
                {{ form_label(form.imageFile) }}
                {{ form_widget(form.imageFile, {'attr': {'class': 'w-full'}}) }}
            </div>

            <div class="flex justify-between mt-4">
                <button type="submit" class="btn btn-active btn-secondary">{{ button_label|default('Quack comment !') }}</button>
                <a href="{{ path('app_quack_index') }}" class="btn btn-secondary">Back to Quack Feed</a>
                {#                TODO: add return to Quack#}
                {#                <a href="{{ path('app_quack_show', {'id': quack.getQuackComment.id}) }}" class="btn btn-primary">Back to quack</a>#}
            </div>

            {{ form_end(form) }}
        </div>


{% endblock %}

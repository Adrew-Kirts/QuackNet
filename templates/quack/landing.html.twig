{% extends 'base.html.twig' %}

{% block title %}Hello QuackNetController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">

        <img src="{{ asset('images/quackLogo.webp') }}" alt="quack_logo">

        {% if not app.user %}
            <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
        {% endif %}
        {% if not app.user %}
        <a href="{{ path('app_profile') }}" class="btn btn-accent">Profile</a>
        {% endif %}
        {% if not app.user %}
        <a href="{{ path('app_register') }}" class="btn btn-base">Register</a>
        {% endif %}
        <a href="{{ path('app_quack_index') }}" class="btn btn-accent">Quacks</a>
        {% if app.user %}
        <a href="{{ path('app_logout') }}" class="btn btn-primary">Logout</a>
        {% endif %}

    </div>
{% endblock %}
